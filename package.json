{
  "name": "barbell-hero",
  "version": "1.0.0",
  "description": "Progressive Web App (PWA) dedicated to strength programming",
  "author": "Martin Fracker <martin.frackerjr@gmail.com>",
  "private": true,
  "dependencies": {
    "@nuxtjs/pwa": "^2.0.8",
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "backpack-core": "^0.7.0",
    "bookshelf": "^0.12.1",
    "bookshelf-secure-password": "^3.0.1",
    "cross-env": "^5.1.4",
    "knex": "^0.14.4",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-mount": "^3.0.0",
    "koa-rest-router": "^1.0.1",
    "nuxt": "^1.4.0",
    "pg": "^7.4.1"
  },
  "scripts": {
    "dev": "backpack dev",
    "build": "nuxt build && backpack build",
    "start": "cross-env NODE_END=production node build/main.js",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "test": "ava",
    "db:migrate:make": "yarn knex migrate:make",
    "db:migrate:latest": "yarn knex migrate:latest",
    "heroku-postbuild": "yarn build"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-eslint": "^7.1.1",
    "eslint": "^3.15.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-html": "^2.0.0",
    "eslint-plugin-promise": "^3.4.1",
    "eslint-plugin-standard": "^2.0.1",
    "jsdom": "^11.6.2",
    "sqlite3": "^4.0.0"
  },
  "engines": {
    "node": "^9.8.0",
    "yarn": "^1.3.2"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "**/*.js",
      "**/*.vue",
      "!build/**/*"
    ],
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  }
}
